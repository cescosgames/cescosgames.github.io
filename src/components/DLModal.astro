<script>
    const modal = document.getElementById('DLmodal');
    const cancelButt = document.getElementById('cancel');
    const confirmButt = document.getElementById('confirm');

    // button logic
    confirmButt?.addEventListener('click', () => {
        modal?.classList.add('opacity-0');
        setTimeout(() => {
            modal?.classList.add('hidden')
        }, 310); // wait for transition out
    });

    // button logic
    cancelButt?.addEventListener('click', () => {
        modal?.classList.add('opacity-0');
        setTimeout(() => {
            modal?.classList.add('hidden')
        }, 310);
    });

    // click outside logic
    modal?.addEventListener('click', event => {
        if (event.target === modal) {
            modal.classList.add('opacity-0');
            setTimeout(() => {
                modal?.classList.add('hidden')
            }, 310);
        };
    });
</script>