    <!-- little about section -->
    <div class="mt-2 w-xs md:w-md">
        <p class="text-sm">
            Hi, my name is Francesco, but my friends call me Cesco, and I like to create <span id="rotatingText" class="text-blue-400 font-semibold">web apps</span> with code.
        </p>
    </div>
</div>


<!-- script for copying email address and assigning open modal-->
<script>
    const openModalButt = document.getElementById('openDLButt')
    const DLmodal = document.getElementById('DLmodal')
    const popup = document.getElementById('popup');
    const click = document.getElementById('clickable')

    function showPopup() {
      popup?.classList.remove("hidden");
      popup?.classList.add("visible");
      setTimeout(() => {
            popup?.classList.remove("visible");
            popup?.classList.add("hidden");
        }, 1000); // Adjust duration as needed
    }
  
    // function to copy email to clipboard, then display feedback
    function copyToClipboard() {
      navigator.clipboard.writeText('cescosgames@gmail.com').then(() => {
        showPopup();
      });
    }

    click?.addEventListener('click', () => {
        copyToClipboard();
    })

    // adding keyboard access to our clickable mail copy button
    click?.addEventListener('keydown', (event) => {
        if (event.key === 'Enter' || event.key === ' ') {
            copyToClipboard();
        }
    })

    // script for rotating text animation
    const words = ['web apps', 'games', 'art', 'tools'];
    let currentIndex = 0;
    const rotatingTextElement = document.getElementById('rotatingText');

    function rotateText() {
        if (!rotatingTextElement) return; // if we can't find it

        // fade out
        rotatingTextElement.style.opacity = '0';

        setTimeout(() => {
            // change text
            currentIndex = (currentIndex + 1) % words.length;
            rotatingTextElement.textContent = words[currentIndex];

            // Fade in
            rotatingTextElement.style.opacity = '1';
        }, 300); // Half of transition time
    }

    // Set transition style
    if (rotatingTextElement) {
        rotatingTextElement.style.transition = 'opacity 0.6s ease-in-out';
    }

    // Rotate every 3 seconds
    setInterval(rotateText, 3000);

    // open modal and 'fade in' using tailwind
    openModalButt?.addEventListener('click', () => {
        DLmodal?.classList.remove('hidden');
        setTimeout(() => {
            DLmodal?.classList.remove('opacity-0')
        }, 10);
    });

</script>